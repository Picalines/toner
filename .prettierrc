{
	"tabWidth": 4,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",

	"plugins": ["@trivago/prettier-plugin-sort-imports"],

	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/lib/.*$",
		"^@/components/.*$",
		"^@/.*$",
		"^\\./.*$"
	]
}
